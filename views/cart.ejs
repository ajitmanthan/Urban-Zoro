<body>
  <%- include('./common/header.ejs') %>
    <div class="container border p-2 rounded-2 my-5">
      <div class="row">
        <div class="col-7">

          <div class="border rounded-2 p-4">
            <div class="country text-center py-3">
              <label for="country" class="my-2 h3">Country To Deliver</label><br>
              <select name="country" id="" class="w-100 p-3 h5 text-dark">
                <option value="">india</option>
                <option value="">usa</option>
                <option value="">china</option>
                <option value="">russia</option>
                <option value="">canada</option>
              </select>
            </div>

            <div class="accordion accordion-flush rounded-2 bg-black text-light" id="accordionFlushExample">
              <div class="accordion-item  bg-black ">
                <h2 class="accordion-header  text-light">
                  <button class="accordion-button collapsed bg-black text-light" type="button" data-bs-toggle="collapse"
                    data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                    PROMO/STUDENT CODE OR VOUCHERS </button>
                </h2>
                <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                  <div class="accordion-body"><input type="text" name="" id="" class="w-75 p-2 rounded-2"
                      placeholder="Enter your code"></div>
                </div>
              </div>
              <div class="accordion-item bg-black">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed bg-black text-light" type="button" data-bs-toggle="collapse"
                    data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                    Email Address
                  </button>
                </h2>
                <div id="flush-collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                  <div class="accordion-body"><input type="text" class="w-75 border-0 p-2 "><button
                      class="btn btn-outline-light rounded-0 mb-1">Add Email</button></div>
                </div>
              </div>
              <div class="accordion-item bg-black">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed bg-black text-light" type="button" data-bs-toggle="collapse"
                    data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                    Delivery Address
                  </button>
                </h2>
                <div id="flush-collapseThree" class="accordion-collapse collapse"
                  data-bs-parent="#accordionFlushExample">
                  <div class="accordion-body py-3"><textarea name="" id="" rows="3" class="w-100"></textarea><br><button
                      class="btn btn-outline-light my-2">Add Address</button></div>
                </div>
              </div>
              <div class="accordion-item bg-black">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed bg-black text-light" type="button" data-bs-toggle="collapse"
                    data-bs-target="#flush-collapsefive" aria-expanded="false" aria-controls="flush-collapsefive">
                    Delivery Option
                  </button>
                </h2>
                <div id="flush-collapsefive" class="accordion-collapse collapse"
                  data-bs-parent="#accordionFlushExample">
                  <div class="accordion-body text-light">

                    <input type="radio" name="" id="" class="me-3"><label for="">Fast delivery</label><br>
                    <input type="radio" name="" id="" class="me-3"><label for="">2 days delievery</label><br>
                    <input type="radio" name="" id="" class="me-3"><label for="">Free delivery</label>


                  </div>
                </div>
              </div>
              <div class="accordion-item bg-black">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed bg-black text-light" type="button" data-bs-toggle="collapse"
                    data-bs-target="#flush-collapsefour" aria-expanded="false" aria-controls="flush-collapsefour">
                    Payment Option
                  </button>
                </h2>
                <div id="flush-collapsefour" class="accordion-collapse collapse"
                  data-bs-parent="#accordionFlushExample">
                  <div class="accordion-body py-3 text-light">
                    <form action="">
                      <input type="radio" name="" id="" class="me-3"><label for="">master card</label><br>
                      <input type="radio" name="" id="" class="me-3"><label for="">master card</label><br>
                      <input type="radio" name="" id="" class="me-3"><label for="">master card</label><br>
                      <input type="radio" name="" id="" class="me-3"><label for="">master card</label>
                    </form>
                  </div>
                </div>
              </div>

            </div>
            <button class="btn btn-outline-light w-100 my-5">
              <h3>PLACE ORDER</h3>
            </button>



          </div>
        </div>
        <div class="col-5 ">
          <div class="border rounded-2 p-4">
            <div class="cart-item mt-5 py-3">
              <div>
                <div class="card mb-3 bg-transparent border-0 text-light">
                  <div class="row">
                    <div class="col-md-4">
                      <img src="images/shoes/2.jpg" class="img-fluid rounded-2" alt="...">
                    </div>
                    <div class="col-md-8">
                      <div class="card-body">
                        <h5 class="card-title fw-bold h3">Ninja Sneakers</h5>
                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to
                          additional content. This content is a little bit longer.</p>
                        <p class="card-text"><strong class="me-5">Quantity: 1 </strong><strong>Size: </strong>44</p>
                        <span class="card-footer"><strong class="me-5">TOTAL TO PAY</strong><strong>4000
                            Rs.</strong></span>
                      </div>
                    </div>
                  </div>
                </div>

              </div>



            </div>


          </div>





        </div>




      </div>

    </div>

    <%- include('./common/footer.ejs') %>

</body>