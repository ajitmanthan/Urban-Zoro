<body class=" bgg-dash">
    <%- include('./header.ejs') %>
   <div class="container mt-5 p-3 border rounded-2 glass">
    <div class="row">
<div class="col-3">
    <%- include('./left.ejs') %>


</div>
<div class="col-9 text-light">
    <div class="p-3 border rounded-2">
      <form action="/dashboard-add" method="post" enctype="multipart/form-data">

      <div class=" px-1">
        <label >Product Type</label> <br>
      <select  class="py-1 my-2 w-100 bg-dark-subtle rounded-2 out bgshadow" name="ptype">
        <option value="">Select Category</option>
        <option value="T-shirt">T-shirt</option>
        <option value="Joggers">Joggers</option>
        <option value="Sneakers">Sneakers</option>
        <option value="Hoodie">Hoodie</option>
        <option value="Jewellery">Jewellery</option>
      </select>
    </div>
    <div class=" px-1">
      <label for="pfile">Item Picture</label> <br>
      <input type="file" class="py-1 my-2 w-100 bg-dark-subtle rounded-2 out bgshadow" name="pfile">
  </div>
        <div class=" px-1">
          <label for="pname">Product Name</label> <br>
          <input type="text" class="py-1 my-2 w-100 bg-dark-subtle rounded-2 out bgshadow" name="pname">
      </div>
      <div class=" px-1">
        <label for="pdiscription">Product Discripton</label> <br>
        <input type="text" class="py-1 my-2 w-100 bg-dark-subtle rounded-2 out bgshadow" name="pdiscription">
    </div>
  
  <div class=" px-1">
    <label for="pdiscount">Discount</label> <br>
    <input type="text" class="py-1 my-2 w-100 bg-dark-subtle rounded-2 out bgshadow" name="pdiscount">
</div>
<div class=" px-1">
  <label for="pprice">Price</label> <br>
  <input type="text" class="py-1 my-2 w-100 bg-dark-subtle rounded-2 out bgshadow" name="pprice">
</div>
<div class=" px-1">
    <label >Colors</label> <br>
    <select class="py-1 my-2 w-100 bg-dark-subtle rounded-2 out bgshadow" name="pcolr">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>
      <div class="mt-3">
        <input type="submit" class="btn btn-outline-light py-1 my-2 w-25 rounded-2  bgshadow" value="submit">
      </div>
    </form>


</div>


